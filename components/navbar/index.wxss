@import '../../lib/common/index.wxss';

.navbar {
    position: fixed;
    display: flex;
    padding: 20px 24rpx 0 24rpx;
    height: 64px;
}

.navbar-background-color0 {
    /* background-color: rgba(255, 255, 255, 0); */
    background-color: rgba(255, 83, 70, 0);
}

.navbar-background-color {
    /* background-color: rgba(255, 255, 255, 1); */
    background-color: rgba(255, 83, 70, 1);
}

.trs {
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
}

.nav-shoaw {
    text-shadow: 0px 2rpx 4rpx #838383;
}

.arrow {
    line-height: 44px !important;
    color: #fff;
}

.arrow-color0 {
    color: rgba(255, 255, 255, 0);
}

.arrow-color {
    color: rgba(255, 255, 255, 1);
}

.nav-title {
    flex: 1;
    text-align: center;
    font-size: 36rpx;
    line-height: 44px;
}

.nav-title-color0 {
    color: rgba(25, 41, 63, 0);
}

.nav-title-color {
    color: rgba(255, 255, 255, 1);
}