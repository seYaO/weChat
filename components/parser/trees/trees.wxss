/* 基础样式 */
/* 链接受到点击的hover-class，可自定义修改 */
.navigator-hover {
    opacity: 0.7;
    text-decoration: underline;
}

/* 以下内容不建议修改 */
:host {
    display: inherit;
    float: inherit;
}

.sub,
.sup,
.text,
.bdo,
.bdi,
.ruby,
.rt,
.span {
    display: inline-block !important;
}

.div,
.blockquote,
.p {
    display: block;
}

.p {
    margin: 8px 0;
}

.h2 {
    font-size: 20px;
    font-weight: 400;
    margin-bottom: 6px;
}

.h2 {
    font-size: 18px;
    font-weight: 400;
    margin-bottom: 5px;
}

.h3 {
    font-weight: 400;
    font-size: 17px;
    margin-bottom: 4px;
}

.h4 {
    font-weight: 400;
    font-size: 16px;
    margin-bottom: 3px;
}

.h5 {
    font-weight: 400;
    font-size: 15px;
    margin-bottom: 2px;
}

.h6 {
    font-weight: 400;
    font-size: 14px;
    margin-bottom: 1px;
}

.h1,
.h2,
.h3,
.h4,
.h5,
.h6 {
    padding-top: 20px;
    margin-bottom: 0;
}

.ol,
.ul {
    display: block;
    margin-block-start: .5em;
    margin-block-end: .5em;
    margin-inline-start: 0;
    margin-inline-end: 0;
    padding-inline-start: 40px;
    padding-left: 1.2em;
}

.ul {
    list-style-type: disc;
}

.ol {
    list-style-type: decimal;
}

.li {
    display: list-item;
    text-align: -webkit-match-parent;
}

ol,
p,
ul {
    line-height: 1.7;
}

.b,
.strong,
.em,
.i,
.del,
.ins {
    display: inline;
}

.h1,
.h2,
.h3,
.h4,
.h5,
.h6,
.b,
.strong {
    font-weight: bolder;
}

.em,
.i {
    font-style: italic;
}

.del {
    text-decoration: line-through;
}

.ins {
    text-decoration: underline;
}

.pre {
    white-space: pre;
    padding: 10px;
    background: #fafafa;
    border: 1px solid #ececec;
    border-radius: 6px;
}

.code {
    display: inline;
    font-family: monospace;
}

.big {
    font-size: 1.2em;
    display: inline;
}

.small {
    font-size: 0.8em;
    display: inline;
}

.q,
.span,
.label,
.abbr {
    display: inline;
}

.q::before {
    content: '"';
}

.q::after {
    content: '"';
}

.audio {
    /* text-align: center; */
    /* margin: 10px 0; */
}

.v {
    text-align: center;
    width: 100%;
}

.video {
    background-color: black;
    width: 100%;
    height: 225px;
    display: inline-block;
    position: relative;
}

.video-triangle {
    border-width: 15px 0 15px 30px;
    border-style: solid;
    border-color: transparent transparent transparent white;
    position: absolute;
    left: 50%;
    top: 50%;
    margin: -15px 0 0 -15px;
}

.hr {
    unicode-bidi: isolate;
    margin: 5px 0;
    overflow: hidden;
    border-style: inset;
    border-width: 1px;
}

/* 表格 */

.table {
    /* display: table; */
    width: 100%;
    max-width: 100%;
}

.tr {
    display: table-row;
    /*border-top: 1px solid #e0e0e0;*/
}

.thead {
    display: table-header-group;
}

.tbody {
    display: table-row-group;
}

.th {
    text-align: center;
    font-weight: bold;
    background: #f0f0f0;
    border-top: 1px solid #e0e0e0;
}

.th,
.td {
    display: table-cell;
    padding: 5px;
    font-size: 28rpx;
    border-left: 1px solid #e0e0e0;
    word-break: break-all;
    white-space: nowrap;
    border-bottom: 1px solid #e0e0e0;
}

.td:last-child,
.th:last-child {
    border-right: 1px solid #e0e0e0;
}

