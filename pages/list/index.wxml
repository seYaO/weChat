<view class="pList">
    <view class="sticky van-hairline--bottom">
        <van-search value="{{ value }}" show-action shape="round" placeholder="书名/作者/主播" readonly bind:tap="searchFocus" bind:cancel="onCancel" />
    </view>
    <view class="container">
        <view class="sBox" wx:if="{{announcers && announcers.length}}">
            <view class="aBox">
                <view class="sflex">
                    <view class="tx1 tit">主播</view>
                </view>
            </view>
            <view class="intro">
                <scroll-view id="items-scroll-view" class="items-scroll" scroll-x="{{true}}" scroll-with-animation scroll-left="{{ true }}">
                    <view class="items-list" wx:for="{{announcers}}" wx:key="index">
                        <image class="head" src="{{item.cover || coverImg}}" bind:tap="openAnnouncer" data-id="{{item.id}}" />
                        <view class="text van-ellipsis">{{item.nickName}}</view>
                    </view>
                </scroll-view>
            </view>
        </view>
        <view class="sBox" wx:if="{{authors && authors.length}}">
            <view class="aBox">
                <view class="sflex">
                    <view class="tx1 tit">作者</view>
                </view>
            </view>
            <view class="intro">
                <scroll-view id="items-scroll-view" class="items-scroll" scroll-x="{{true}}" scroll-with-animation scroll-left="{{ true }}">
                    <view class="items-list" wx:for="{{authors}}" wx:key="index">
                        <image class="head" src="{{item.cover || coverImg}}" />
                        <view class="text van-ellipsis">{{item.name}}</view>
                    </view>
                </scroll-view>
            </view>
        </view>
        <view class="sProduct">
            <project-skeleton col="{{6}}" row="{{2}}" avatar="{{true}}" avatar-size="80" avatar-shape="square" title="{{true}}" loading="{{!list.length}}" >
                <block wx:for="{{list}}" wx:key="index">
                    <project-product values="{{ {...item, desc: item.recommend, link: '/pages/detail/index?id=' + item.id } }}" />
                </block>
            </project-skeleton>
        </view>
    </view>
</view>
<van-toast id="van-toast" />