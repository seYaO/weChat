page {
    background: #fff;
}

.history {
    padding: 10rpx 20rpx;
    display: inline-block;
    max-width: 680rpx;
    font-size: 24rpx;
    color: #333;
    background: #f8f8f8;
    border-radius: 30rpx;
    margin-bottom: 20rpx;
}

.colhot {
    padding: 10rpx 0;
    font-size: 28rpx;
    color: #666;
}

.colhot .num {
    margin-right: 30rpx;
}

.colhot:first-child .num {
    color: #fd5353;
}

.colhot:nth-child(2) .num {
    color: #ff6641;
}

.colhot:nth-child(3) .num {
    color: #ffa139;
}