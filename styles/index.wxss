page {
    color: #666;
    -webkit-text-size-adjust: 100% !important;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    overflow-x: hidden;
    height: 100%;
    background: #efeff4;
}

input {
    outline: none;
    font-size: 100%;
    -webkit-appearance: none;
}

page,
view,
ul,
li,
input,
p,
th,
td,
button,
section {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

ul {
    width: 100%;
}

ul,
li,
p {
    display: block;
}

table {
    display: table;
    border-collapse: collapse;
    border-spacing: 0;
}

th {
    text-align: inherit;
    display: table-cell;
}

thead {
    display: table-header-group;
}

tbody {
    display: table-row-group;
}

tr {
    display: table-row;
}

td {
    display: table-cell;
}

em,
th,
i {
    font-style: normal;
    font-weight: 500;
}

ol,
ul {
    list-style: none;
}

/* 
 * ------------------------------------------------------------------
 * ------------------------------------------------------------------
 * 通用样式
 * ------------------------------------------------------------------
 * ------------------------------------------------------------------
 */

.fn-clear:after {
    visibility: hidden;
    display: block;
    font-size: 0;
    content: " ";
    clear: both;
    height: 0;
}

.none {
    display: none;
}

.sflex {
    display: flex;
    align-items: center;
}

.bet {
    justify-content: space-between;
}

.col {
    flex-direction: column;
}

.fStart {
    align-items: flex-start;
}

.smask {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 150rpx;
    background: -webkit-linear-gradient(bottom, rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0));
}

.svirtual {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.4);
}

.sticky {
    position: sticky;
    top: 0;
}

.image {
    position: relative;
    display: inline-block;
}