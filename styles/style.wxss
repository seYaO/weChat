/* 面板 start  */
.sPannel {
    position: relative;
    background: #fff;
}

.pannel {
    background: #fff;
    border-top-left-radius: 25rpx;
    border-top-right-radius: 25rpx;
    width: 750rpx;
    height: 302rpx;
    /* position: absolute; */
    top: -23rpx;
    left: 50%;
    transform: translate(-50%);
    box-shadow: 0 3rpx 3rpx #eceef1;
    transition: all 0.3s ease-in-out;
}

/* --- */
.wx-cover,
.list-cover::after {
    height: 100%;
    background: linear-gradient(right, #FFF, rgba(255, 255, 255, .1)) !important;
    background: -webkit-linear-gradient(right, #FFF, rgba(255, 255, 255, .1)) !important;
}