/* 
 * ------------------------------------------------------------------
 * ------------------------------------------------------------------
 * 置顶
 * ------------------------------------------------------------------
 * ------------------------------------------------------------------
 */
.toTop {
    position: fixed;
    width: 80rpx;
    height: 80rpx;
    background: url('https://file.40017.cn/top/minapp/market/tickets/toTop.png') no-repeat;
    background-size: 100% 100%;
    bottom: 200rpx;
    right: 30rpx;
    z-index: 1;
}

/* 
 * ------------------------------------------------------------------
 * ------------------------------------------------------------------
 * modules
 * ------------------------------------------------------------------
 * ------------------------------------------------------------------
 */

.sBox {
    background-color: #fff;
}

.sBox:not(:first-child) {
    margin-top: 20rpx;
}

.sBox .intro {
    padding: 0 30rpx;
}

.aBox {
    display: block;
    padding: 0 30rpx;
}

.aBox>.sflex {
    padding: 30rpx 0;
}

.aBox .icon {
    width: 24rpx;
    height: 32rpx;
    margin-right: 20rpx;
    flex: none;
}

.aBox .large {
    padding: 40rpx 0;
}

.aBox .large .tx1 {
    font-size: 26rpx;
}

.aBox .large .tit {
    font-size: 40rpx;
}

.aBox .tx1 {
    font-size: 24rpx;
    color: #333;
    flex: auto;
}

.aBox .tit {
    font-size: 30rpx;
    font-weight: 500;
}

.aBox .tx2 {
    font-size: 22rpx;
    color: #999;
    flex: none;
    margin-left: 20rpx;
}

.aBox .arrow {
    margin-left: 20rpx;
    width: 13rpx;
    height: 27rpx;
}

.aBox .arrow {
    margin-left: 20rpx;
    width: 13rpx;
    height: 27rpx;
}

.aBox .circle .arrow {
    width: 26rpx;
    height: 26rpx;
    margin-left: 15rpx;
    border-radius: 26rpx;
    background: #f5f5f5;
    transition: all 0.3s;
    flex-shrink: 0;
}

/* 
 * ------------------------------------------------------------------
 * ------------------------------------------------------------------
 * sMore
 * ------------------------------------------------------------------
 * ------------------------------------------------------------------
 */

.sMore {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 24rpx 0;
    text-align: center;
    font-size: 24rpx;
    color: #999;
}

.sMore .arrow {
    display: block;
    margin-left: 10rpx;
    width: 27rpx;
    height: 13rpx;
    transition: all 0.3s;
}

.sMore.right .arrow {
    margin-left: 10rpx;
    width: 13rpx;
    height: 27rpx;
}

.sMore.on .arrow {
    transform: rotate(-180deg);
}

/* 
 * ------------------------------------------------------------------
 * ------------------------------------------------------------------
 * sBottom
 * ------------------------------------------------------------------
 * ------------------------------------------------------------------
 */

.sBottomBg {
    height: 110rpx;
    background: #efeff4;
}

.sBottom {
    position: fixed;
    width: 100%;
    bottom: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: #fff;
    box-shadow: 0 -1px 5px #ddd;
}

.sBottom .content {
    margin-left: 30rpx;
    font-size: 26rpx;
    color: #999;
}

.sBottom .btn {
    position: relative;
    width: 300rpx;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 36rpx;
    text-align: center;
    color: #fff;
    background: #ff5346;
}



